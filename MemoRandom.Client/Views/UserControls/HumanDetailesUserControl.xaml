<UserControl x:Class="MemoRandom.Client.Views.UserControls.HumanDetailesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoRandom.Client.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Имя и отчество (если таковое есть)-->
        <TextBlock x:Name="NameAndPat"
                   Grid.Row="0"
                   Text="Name_Patr"/>

        <TextBlock x:Name="Surname"
                   Grid.Row="1"
                   Text="Surname"/>

        <TextBlock x:Name="FullYears"
                   Grid.Row="2"
                   Text="Full_Ye"/>
    </Grid>
</UserControl>
