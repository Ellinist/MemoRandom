<UserControl x:Class="MemoRandom.Client.Views.UserControls.HumansMenuUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoRandom.Client.Views.UserControls"
             mc:Ignorable="d">

    <!--Данный UC предназначен для меню стартового режима-->
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Menu Background="Transparent">
                <MenuItem Header="Справочник" Command="{Binding SettingsMenuCommand}"/>
                <MenuItem Header="Аналитика">
                    <MenuItem Header="Категории" Command="{Binding CategoriesCommand}"/>
                    <MenuItem Header="Дополнительно" Command="{Binding ComparedHumansOpenCommand}"/>
                    <MenuItem Header="Сравнение" Command="{Binding DynamicShowCommand}"/>
                </MenuItem>
                <MenuItem Header="О программе" Command="{Binding StartAboutCommand}"/>
            </Menu>
        </StackPanel>
    </Grid>
</UserControl>
