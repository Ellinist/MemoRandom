<Window x:Class="MemoRandom.Client.Views.CategoriesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoRandom.Client.Views"
        mc:Ignorable="d"
        Title="CategoriesView" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DataGrid Grid.Column="0"
                  x:Name="DgCategories"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="All"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding CategoriesList}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Категория"
                                    x:Name="CategoryName"
                                    Width="300" MinWidth="300"
                                    Binding="{Binding CategoryName}">

                </DataGridTextColumn>
                <DataGridTextColumn Header="От"
                                    x:Name="PeriodFrom"
                                    Width="60" MinWidth="60"
                                    Binding="{Binding PeriodFrom}">

                </DataGridTextColumn>
                <DataGridTextColumn Header="До"
                                    x:Name="PeriodTo"
                                    Width="60" MinWidth="60"
                                    Binding="{Binding PeriodTo}">

                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="60" MinHeight="60" MaxHeight="60"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Категория:"/>
                </Grid>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Margin="10, 2, 5, 2"
                        Content="Сохранить">

                </Button>

                <Button Grid.Column="1"
                        Margin="5, 2, 10, 2"
                        Content="Удалить">
                    
                </Button>
            </Grid>
        </Grid>
        
    </Grid>
</Window>
